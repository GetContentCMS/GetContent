{
    "name": "getcontent/cms",
    "description": "GetContent CMS Package",
    "keywords": [
        "GetContentCMS",
        "laravel",
        "cms"
    ],
    "homepage": "https://github.com/getcontentcms/getcontent",
    "license": "MIT",
    "authors": [
        {
            "name": "Rich Standbrook",
            "email": "hello@richstandbrook.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^8.73"
    },
    "require-dev": {
        "nunomaduro/collision": "^5.10",
        "nunomaduro/larastan": "^1.0",
        "orchestra/testbench": "^6.22",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "GetContent\\GetContent\\": "src",
            "GetContent\\GetContent\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GetContent\\GetContent\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/pest coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "GetContent\\GetContent\\GetContentServiceProvider"
            ],
            "aliases": {
                "GetContent": "GetContent\\GetContent\\Facades\\GetContent"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
